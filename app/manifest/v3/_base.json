{
  "action": {
    "default_icon": {
      "16": "images/berkah/icon-16.png",
      "19": "images/berkah/icon-19.png",
      "32": "images/berkah/icon-32.png",
      "38": "images/berkah/icon-38.png",
      "64": "images/berkah/icon-64.png",
      "128": "images/berkah/icon-128.png",
      "512": "images/berkah/icon-512.png"
    },
    "default_title": "Berkah Wallet",
    "default_popup": "popup.html"
  },
  "author": "https://metamask.io",
  "background": {
    "service_worker": "scripts/app-init.js"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+Shift+M",
        "mac": "Alt+Shift+M",
        "chromeos": "Alt+Shift+M",
        "linux": "Alt+Shift+M"
      }
    }
  },
  "content_scripts": [
    {
      "matches": ["file://*/*", "http://*/*", "https://*/*"],
      "js": [
        "scripts/disable-console.js",
        "scripts/lockdown-install.js",
        "scripts/lockdown-run.js",
        "scripts/lockdown-more.js",
        "scripts/contentscript.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://connect.trezor.io/*/popup.html"],
      "js": ["vendor/trezor/content-script.js"]
    }
  ],
  "default_locale": "en",
  "description": "Berkah Wallet Selalu Berkah Aamiin!",
  "host_permissions": [
    "http://localhost:8545/",
    "file://*/*",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "images/berkah/icon-16.png",
    "19": "images/berkah/icon-19.png",
    "32": "images/berkah/icon-32.png",
    "38": "images/berkah/icon-38.png",
    "48": "images/berkah/icon-48.png",
    "64": "images/berkah/icon-64.png",
    "128": "images/berkah/icon-128.png",
    "512": "images/berkah/icon-512.png"
  },
  "manifest_version": 3,
  "name": "Berkah Wallet",
  "permissions": [
    "activeTab",
    "alarms",
    "clipboardWrite",
    "notifications",
    "scripting",
    "storage",
    "unlimitedStorage",
    "webRequest",
    "offscreen"
  ],
  "sandbox": {
    "pages": ["snaps/index.html"]
  },
  "short_name": "Berkah Wallet"
}
